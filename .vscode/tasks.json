{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "precommit",
            "type": "shell",
            "command": "/bin/bash",
            "args": [
                "-c",
                "sh ./tool/pre-commit '${file}'"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": [],
            "runOptions": {
                "runOn": "onSave"
            }
        }
    ]
}